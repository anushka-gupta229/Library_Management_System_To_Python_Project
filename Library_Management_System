ibrary = {
    "Python Basics": 3,
    "Data Science": 2,
    "Machine Learning": 1
}

borrowed_books = {}

def display_books():
    print("\nAvailable Books:")
    for book, copies in library.items():
        print(f"{book} - Copies available: {copies}")

def borrow_book():
    book = input("Enter the book name you want to borrow: ")
    if book in library and library[book] > 0:
        library[book] -= 1
        borrowed_books[book] = borrowed_books.get(book, 0) + 1
        print(f"You have borrowed '{book}'. Enjoy reading!")
    else:
        print("Sorry, this book is not available right now.")

def return_book():
    book = input("Enter the book name you want to return: ")
    if book in borrowed_books and borrowed_books[book] > 0:
        borrowed_books[book] -= 1
        library[book] += 1
        print(f"Thank you for returning '{book}'.")
    else:
        print("You didn't borrow this book from us.")

def main():
    while True:
        print("\nLibrary Management System")
        print("1. Display Books")
        print("2. Borrow Book")
        print("3. Return Book")
        print("4. Exit")
        choice = input("Enter your choice (1-4): ")

if choice == '1':
            display_books()
        elif choice == '2':
            borrow_book()
        elif choice == '3':
            return_book()
        elif choice == '4':
            print("Thanks for using the Library Management System. Goodbye!")
            break
        else:
            print("Invalid choice. Please try again.")

if _name_ == "_main_":
    main()
